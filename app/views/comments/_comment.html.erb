<% unless comment.archived? || comment.private? %>
  <strong><%= link_to comment.commenter, user_path(comment.user) %>:</strong>
  <br />
  <p>
    <%= comment.body %>
    <% if user_logged_in? && comment.user_id == current_user.id %>
      <%= link_to 'Delete',
                  [comment.article, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'link-danger float-right'
      %>
    <% end %>
  </p>
<% end %>
