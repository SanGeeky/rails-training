<% unless comment.archived? || comment.private? %>
  <strong><%= comment.commenter %>:</strong>
  <br />
  <p>
    <%= comment.body %>
    <% if user_logged_in? %>
      <%= link_to 'Delete',
                  [comment.article, comment],
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'link-danger float-right'
      %>
    <% end %>
  </p>
<% end %>
