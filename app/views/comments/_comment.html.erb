<% unless comment.archived? || comment.private? %>
  <strong><%= comment.commenter %>:</strong>
  <br>
  <p>
    <%= comment.body %>
    <%= link_to 'Delete',
                [comment.article, comment],
                method: :delete, data: { confirm: 'Are you sure?' },
                class: "link-danger" %>
  </p>
<% end %>
